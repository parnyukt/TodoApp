<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/White</item>
        <item name="colorPrimary">@color/Green_500</item>
        <item name="colorPrimaryDark">@color/Green_700</item>
        <item name="android:textColorPrimary">@color/White</item>
        <item name="android:actionModeBackground">@color/White</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <!--<item name="android:editTextStyle">@style/App_EditTextStyle</item>-->
    </style>

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="Text"></style>

    <style name="Text.ListItem">
        <item name="android:lines">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="Text.Form">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>


    <style name="Text.Urgent">
        <item name="android:textColor">@color/Red_a700</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
